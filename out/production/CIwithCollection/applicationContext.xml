<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="ans1" class="Answer">
        <constructor-arg value="1"></constructor-arg>
        <constructor-arg value="Java is a programming language"></constructor-arg>
        <constructor-arg value="John"></constructor-arg>
    </bean>
    <bean id="ans2" class="Answer">
        <constructor-arg value="2"></constructor-arg>
        <constructor-arg value="Java is an insel in indonesien"></constructor-arg>
        <constructor-arg value="Markus"></constructor-arg>
    </bean>
    <bean id="q" class="Question">
        <constructor-arg value="111"></constructor-arg>
        <constructor-arg value="What is java?"></constructor-arg>
        <constructor-arg>
            <map>
                <entry key="Java is a Programming Language" value="karl"></entry>
                <entry key="Java is an Island" value="sebastian"></entry>
                <entry key="Java is a platform" value="sofia"></entry>
            </map>
      <!--      <list>
                <ref bean="ans1"/>
                <ref bean="ans2"/>
            </list>-->
        </constructor-arg>
    </bean>

</beans>